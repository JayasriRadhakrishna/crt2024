search no in array


#include <stdio.h>
//read n elements into an array and print search element is found or not number//
int main()
{
    int n;
    scanf("%d",&n);
    int a[n],i;
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
        
    }
    int sno;
    printf("%d",&sno);
    for(i=0;i<n;i++)
    {
       if(sno==a[i]) 
       {
          printf("element is found");
          break;
       }
    }
    if(i==n)
    {
        printf("element is not found");
    }
    
}
