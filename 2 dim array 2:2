2 dim array 2:2

#include <stdio.h>
// read 2;2 matrix//
int main()
{
    int a[2][2],i,j;
    for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        scanf("%d",&a[i][j]);
    }
    for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        printf("%d ",a[i][j]);
        printf("\n");
    }
    
    
}
