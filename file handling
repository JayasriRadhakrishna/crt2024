file handling


#include <stdio.h>
#include<stdlib.h>
int main()
{
int admno,mat,phy,che,tot;
float avg;
char name[40];
printf("enter  admission no");
scanf("%d",&admno);
printf("enter name");
scanf("%s",name);
printf("enter three subject marks");
tot=mat+phy+che;
avg=tot/3.0;
FILE *p;
p=fopen("student txt","a");
fprintf(p,"admission no       =%d\n",admnno);
fprintf(p,"name                =%d\n",name);
fprintf(p,"maths                =%d\n",mat);
fprintf(p,"physics                =%d\n",phy);
fprintf(p,"chemistry                =%d\n",che);
fprintf(p,"total                 =%d\n",tot);
fprintf(p,"average                =%f\n",avg);
fclose(p);
}

